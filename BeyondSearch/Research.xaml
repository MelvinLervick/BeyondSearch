<Window x:Class="BeyondSearch.Research"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        FontSize="12pt"
        Background="#FFD4E4EE" WindowStyle="ThreeDBorderWindow" Topmost="False"
        Title="Research" Height="600" Width="800">
  <Grid ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
    <Grid.RowDefinitions>
      <RowDefinition Height="25" />
      <RowDefinition Height="*" />
      <RowDefinition Height="35" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Menu FontSize="12pt" Grid.Row="0" IsMainMenu="True">
      <MenuItem Header="_Exit" Click="Menu_FileExitClick" />
      <MenuItem Header="_Help" />
    </Menu>
    <Grid Grid.Row="1" Margin="0 3 0 3">
      <Grid.RowDefinitions>
        <RowDefinition Height="40" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="150" />
        <ColumnDefinition Width="150" />
      </Grid.ColumnDefinitions>
      <Border Grid.Row="0" Grid.ColumnSpan="4" BorderBrush="Blue" BorderThickness="0 0 0 2" />
      <Label Grid.Row="0" Grid.Column="0" Width="100" FontSize="12" FontWeight="Bold" VerticalAlignment="Center">Text To Add</Label>
      <TextBox Name="TextBoxStringToAdd" Grid.Row="0" Grid.Column="1" Height="25" AcceptsReturn="True" FontSize="12" VerticalAlignment="Center" VerticalContentAlignment="Center"></TextBox>
      <Button Grid.Row="0" Grid.Column="2" Height="30" VerticalAlignment="Center" Margin="10,2,0,3" Click="AddKeyword_Click">Add Keyword</Button>
      <Button Grid.Row="0" Grid.Column="3" Height="30" VerticalAlignment="Center" Margin="10,2,0,3" Click="AddFilter_Click">Add Filter</Button>
      <Grid Grid.Row="1" Grid.ColumnSpan="4" Grid.Column="0" Background="Beige">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" MinWidth="200" />
          <ColumnDefinition Width="*" MinWidth="200" />
          <ColumnDefinition Width="*" MinWidth="150" />
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.ColumnSpan="3" BorderBrush="Blue" BorderThickness="0 0 0 2" />
        <ListBox Grid.Column="0" Height="400" Name="ListBoxKeywords" Margin="5,5,5,5" FontSize="10" VerticalAlignment="Top" VerticalContentAlignment="Top"></ListBox>
        <ListBox Grid.Column="1" Height="400" Name="ListBoxFilters" Margin="5,5,5,5" FontSize="10" VerticalAlignment="Top" VerticalContentAlignment="Top"></ListBox>
        <ListBox Grid.Column="2" Height="400" Name="ListBoxFilteredKeywords" Margin="5,5,5,5" FontSize="10" VerticalAlignment="Top" VerticalContentAlignment="Top"></ListBox>
      </Grid>
    </Grid>
    <Grid Grid.Row="2" Margin="10, 0, 10, 0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100" />
        <ColumnDefinition Width="100" />
        <ColumnDefinition Width="200" />
      </Grid.ColumnDefinitions>
      <RadioButton Grid.Column="0" Content="Exact" GroupName="FilterType" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="FilterType_Checked" IsChecked="True" />
      <RadioButton Grid.Column="1" Content="Contains" GroupName="FilterType" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="FilterType_Checked" />
      <Button Grid.Column="2" Height="30" VerticalAlignment="Center" Margin="10,2,0,3" Click="Filter_Click">Apply Filter</Button>
    </Grid>
  </Grid>
</Window>
